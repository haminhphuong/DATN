<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="catalogrule" resource="default" engine="innodb" comment="CatalogRule">
        <column xsi:type="smallint" name="rule_type" unsigned="false" nullable="false" identity="false"
                default="0" comment="choose rule option(0 is special offers, 1 is promotion)"/>
        <column xsi:type="text" name="link" nullable="true" comment="link redirect"/>
    </table>

</schema>
