<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_video">
    <fieldset name="contents" sortOrder="30">
        <field name="background_content_type" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Shape Type</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">default</item>
                                <item name="label" xsi:type="string" translate="true">Default</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">bg-shape-type1</item>
                                <item name="label" xsi:type="string" translate="true">Cross</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">bg-shape-type2</item>
                                <item name="label" xsi:type="string" translate="true">Wavy</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
