<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <fieldset name="design" sortOrder="50">
        <field name="show_breadcrumbs" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Breadcrumbs</label>
                <dataScope>show_breadcrumbs</dataScope>
                <visible>true</visible>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Ecommage\CustomCmsPage\Ui\Component\Form\Option"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
