<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="category_assign_slider" resource="default" engine="innodb" comment="Category assign post">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="int" name="slider_ctg_id" unsigned="true" nullable="false" padding="10"
                comment="Slider Category Id"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" padding="10"
                comment="Category Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
