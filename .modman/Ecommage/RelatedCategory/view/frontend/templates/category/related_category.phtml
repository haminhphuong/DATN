        require(['jquery', 'swiper_slider'], function ($, Swiper) {
            jQuery(document).ready(function () {
                var swiper = new Swiper('#swiper_container_related_category', {
                    slidesPerView: 4,
                    spaceBetween: 20,
                    effect: 'fadeIn',
                    loop: true,
                    autoplay: true,
                    // {
                    //     delay: 5000,
                    //     disableOnInteraction: true,
                    // },
                    pagination: {
                        clickable: true,
                    },
                    navigation: {
                        nextEl: ".swiper-button-next-related-category ",
